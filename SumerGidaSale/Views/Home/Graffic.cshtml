<canvas id="myChart" width="400" height="400"></canvas>
<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var provinces = @Html.Raw(Json.Serialize(ViewBag.Provinces));
    var saleQuantities = @Html.Raw(Json.Serialize(ViewBag.SaleQuantities));

    var chart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: provinces,
            datasets: [{
                data: saleQuantities,
                backgroundColor: [
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                    // İhtiyaca göre renkler ekleyebilirsiniz
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            // İsteğe bağlı grafik ayarları
        }
    });
</script>
