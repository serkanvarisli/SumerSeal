@model List<Sale>
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

<div style="max-width: 400px;">
    <!-- Grafiği istediğiniz genişlikte sınırlamak için bir div kullanabilirsiniz -->
    <canvas id="myChart" width="200" height="200"></canvas> <!-- Canvas boyutlarını düşürün -->
</div>

<script>
    var ctx = document.getElementById('myChart').getContext('2d');

    var labels = @Html.Raw(Json.Serialize(Model.Select(s => s.Province)));
    var data = @Html.Raw(Json.Serialize(Model.Select(s => s.SaleQuentity)));

    var chart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: labels,
            datasets: [{
                data: data,
                backgroundColor: [
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            // İsteğe bağlı grafik ayarları
        }
    });
</script>
